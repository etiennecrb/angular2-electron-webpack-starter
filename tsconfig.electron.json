{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist/",
        "lib": ["es2015", "dom"],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "./main.ts",
        "./electron/**/*",
        "./shared/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}